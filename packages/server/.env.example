# Server
PORT=3000
DATABASE_URL=postgres://friendsai:friendsai@localhost:5432/friendsai
JWT_SECRET=change-me
DEV_VERIFY_CODE=123456

# AI provider
# mock | openai_compat
AI_PROVIDER=openai_compat
AI_BASE_URL=http://127.0.0.1:9739/v1
AI_API_KEY=sk-your-key
AI_MODEL=gemini-3-flash

# Optional routing / fallback (e.g. fallback to OpenAI cloud)
# primary | fallback | auto
AI_ROUTING_MODE=primary
