{
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "operation": { "const": "archive_extract" },
        "id": { "type": "string" },
        "status": { "type": "string" },
        "summary": { "type": "string" },
        "payload": {
          "type": "object",
          "properties": {
            "keyPoints": { "type": "array", "items": { "type": "string" } },
            "decisions": { "type": "array", "items": { "type": "string" } },
            "actionItems": { "type": "array", "items": { "type": "string" } },
            "participants": { "type": "array", "items": { "type": "string" } },
            "contacts": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "company": { "type": "string" },
                  "position": { "type": "string" },
                  "email": { "type": "string" },
                  "role": { "type": "string" }
                },
                "required": ["name"]
              }
            },
            "facts": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" },
                  "category": { "type": "string" }
                },
                "required": ["content"]
              }
            },
            "tags": { "type": "array", "items": { "type": "string" } },
            "dates": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "description": { "type": "string" },
                  "date": { "type": "string" },
                  "type": { "type": "string", "enum": ["deadline", "meeting", "milestone", "other"] }
                },
                "required": ["description"]
              }
            }
          }
        }
      },
      "required": ["operation", "id", "status", "summary", "payload"]
    },
    {
      "properties": {
        "operation": { "const": "brief_generate" },
        "id": { "type": "string" },
        "contact_id": { "type": "string" },
        "content": { "type": "string" },
        "generated_at": { "type": "string" },
        "source_hash": { "type": "string" }
      },
      "required": ["operation", "id", "contact_id", "content", "generated_at", "source_hash"]
    }
  ]
}


