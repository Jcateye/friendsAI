{
  "name": "friends-ai",
  "version": "1.0.0",
  "private": true,
  "description": "FriendsAI - AI-powered relationship management app (Monorepo)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "web:dev": "bun run --cwd packages/web dev",
    "web:build": "bun run --cwd packages/web build",
    "web:preview": "bun run --cwd packages/web preview",
    "server:dev": "bun run --cwd packages/server-nestjs start:dev",
    "server:build": "bun run --cwd packages/server-nestjs build",
    "server:start": "bun run --cwd packages/server-nestjs start:prod",
    "server:migrate": "bun run --cwd packages/server-nestjs migrate",
    "dev": "concurrently \"bun run web:dev\" \"bun run server:dev\"",
    "build": "bun run web:build && bun run server:build",
    "user-stories:verify": "node scripts/verify-user-stories.js",
    "ralph": "bun run scripts/ralph/runner.ts",
    "test": "bun run --cwd packages/server-nestjs test",
    "test:watch": "bun run --cwd packages/server-nestjs test:watch",
    "test:coverage": "bun run --cwd packages/server-nestjs test:cov",
    "test:e2e": "bun run --cwd packages/server-nestjs test:e2e",
    "db:migration:smoke": "bun run --cwd packages/server-nestjs migration:smoke",
    "web:bundle:check": "node scripts/check-web-bundle-size.js",
    "test:ci": "bun run db:migration:smoke && bun run test && bun run test:e2e && bun run web:build && bun run web:bundle:check",
    "ci:migration:smoke": "npm run migration:smoke --workspace server-nestjs",
    "ci:server:test": "npm run test --workspace server-nestjs -- --runInBand",
    "ci:server:e2e": "npm run test:e2e --workspace server-nestjs -- --runInBand",
    "ci:web:build": "npm run build --workspace @friends-ai/web",
    "ci:web:bundle:check": "node scripts/check-web-bundle-size.js",
    "ci:verify": "bash scripts/ci/verify.sh"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openclaw": "^2026.1.30",
    "openspec": "^0.0.0",
    "pg": "^8.18.0",
    "uuidv7": "^1.1.0"
  }
}
